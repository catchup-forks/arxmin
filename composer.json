{
    "name": "arx/arxmin",
    "type" : "Admin Management System",
    "description": "Arxmin is an universal admin and content management system for your Laravel project",
    "homepage": "http://www.arx.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Sum",
            "email": "daniel@cherrylabs.net",
            "homepage": "http://www.cherrylabs.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.7",
        "arx/core" : "4.1.*",
        "laravel/laravel" : "4.1.x",
        "zizaco/entrust": "*",
        "zizaco/confide": "*",
        "bllim/datatables": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "0.7.2"
    },
    "autoload": {
        "psr-0": {
            "Arxmin": "src"
        },
        "classmap": [
            "src/Arxmin/commands",
            "src/Arxmin/controllers",
            "src/Arxmin/models",
            "src/database/migrations",
            "src/database/seeds",
            "src/tests"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev"
}